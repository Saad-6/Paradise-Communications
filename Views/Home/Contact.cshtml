@using Paradise.Models.FormModels
@model ContactUs
<section class="d-flex justify-content-center align-items-center" id="ContactTop">
    <div class="content">
        <h1 id="contactH1">Contact us</h1>
        <br>
        <span class="d-inline-flex">
            <a class="nav-link" href="Home.html" id="contactHome">Home</a>
            <span>/</span>
            <a class="nav-link" href="#" id="contactContact">Contact</a>
        </span>
    </div>
</section>



<section class="background-section d-flex justify-content-center align-items-center" style="background-image:url('Images/contact3.png')"   id="ContactFormPage">
    <div class="container">
        <div class="row justify-content-center">
            <!-- Right side (60%) -->
            <div class="col-md-8 col-lg-6">
                <div class="bg-transparent" style=" padding: 20px; border-radius: 8px;">
                    <h1 class="text-white mb-4 text-center" style="margin:20px 0px;">Send us a Message</h1>
                    <form style="margin:20px 0px;" method="post" action="ContactUs">
                        <!-- First Name and Last Name -->
                        <div class="row mb-3">
                            <div class="col-12 col-md-6 mb-3">
                                <input type="text" required class="form-control form-control-lg"asp-for="FirstName" placeholder="First Name" style="background-color: rgba(255, 255, 255, 0.1); color: #c3c4e1; height: 50px; border: none;">
                            </div>
                            <div class="col-12 col-md-6 mb-3">
                                <input type="text" required class="form-control form-control-lg"asp-for="LastName" placeholder="Last Name" style="background-color: rgba(255, 255, 255, 0.1); color: #c3c4e1; height: 50px; border: none;">
                            </div>
                        </div>

                        <!-- Email and Phone Number -->
                        <div class="row mb-3">
                            <div class="col-12 col-md-6 mb-3">
                                <input type="email" required class="form-control form-control-lg" name="Email" placeholder="Email..." style="background-color: rgba(255, 255, 255, 0.1); color: #c3c4e1; height: 50px; border: none;">
                            </div>
                            <div class="col-12 col-md-6 mb-3">
                                <input type="tel" required class="form-control form-control-lg" asp-for="Phone" placeholder="Phone..." style="background-color: rgba(255, 255, 255, 0.1); color: #c3c4e1; height: 50px; border: none;">
                            </div>
                        </div>

                        <!-- Option Input -->
                        <div class="mb-3">
                            <select class="form-select form-select-lg" asp-for="Service"  style="background-color: rgba(255, 255, 255, 0.1); color: #c3c4e1; height: 50px; border: none;">
                                <option selected>Choose a Service</option>
                                <option value="Medicare">Medicare</option>
                                <option value="FinalExpense">Final Expense</option>
                                <option value="AutoInsurance">Auto Insurance</option>
                                <option value="MVA">MVA</option>
                                <option value="ACA">ACA</option>
                            </select>
                        </div>

                        <!-- Message -->
                        <div class="mb-3">
                            <textarea class="form-control form-control-lg" asp-for="Message" rows="4" placeholder="Your Message" style="background-color: rgba(255, 255, 255, 0.1); color: #c3c4e1; height: 100px; border: none;"></textarea>
                        </div>

                        <!-- Send Message Button -->
                        <button type="submit" class="btn" style="background-color: rgba(35, 83, 58, 1); color: white; height: 50px; border: none; width: 100%;">Send Us a Message</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
