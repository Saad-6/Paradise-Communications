
@{
    ViewData["Title"] = "Forms Dashboard";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <!-- ACA Card -->
        <div class="col-lg-4 col-md-6 mb-4">
            <a href="@Url.Action("ACA", "Home")" class="card-link">
                <div class="card text-white bg-primary h-100 shadow-sm">
                    <div class="card-body text-center d-flex flex-column justify-content-center">
                        <i class="fas fa-notes-medical fa-3x mb-3"></i>
                        <h5 class="card-title">ACA Form</h5>
                        <p class="card-text">Access the ACA form to manage healthcare options.</p>
                    </div>
                </div>
            </a>
        </div>

        <!-- Medicare Card -->
        <div class="col-lg-4 col-md-6 mb-4">
            <a href="@Url.Action("Medicare", "Home")" class="card-link">
                <div class="card text-white bg-success h-100 shadow-sm">
                    <div class="card-body text-center d-flex flex-column justify-content-center">
                        <i class="fas fa-user-md fa-3x mb-3"></i>
                        <h5 class="card-title">Medicare Form</h5>
                        <p class="card-text">Access the Medicare form to manage patient details.</p>
                    </div>
                </div>
            </a>
        </div>

        <!-- Final Insurance Card -->
        <div class="col-lg-4 col-md-6 mb-4">
            <a href="@Url.Action("FinalInsurance", "Home")" class="card-link">
                <div class="card text-white bg-info h-100 shadow-sm">
                    <div class="card-body text-center d-flex flex-column justify-content-center">
                        <i class="fas fa-file-alt fa-3x mb-3"></i>
                        <h5 class="card-title">Final Insurance Form</h5>
                        <p class="card-text">Manage final insurance details through this form.</p>
                    </div>
                </div>
            </a>
        </div>

        <!-- Auto Insurance Card -->
        <div class="col-lg-4 col-md-6 mb-4">
            <a href="@Url.Action("AutoInsurance", "Home")" class="card-link">
                <div class="card text-white bg-warning h-100 shadow-sm">
