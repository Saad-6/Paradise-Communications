            </a>
        </div>

        <!-- MVA Card -->
        <div class="col-lg-4 col-md-6 mb-4">
            <a href="@Url.Action("MVA", "Home")" class="card-link">
                <div class="card text-white bg-danger h-100 shadow-sm">
